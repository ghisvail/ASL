#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#DH_VERBOSE = 1

%:
	dh $@ --buildsystem=cmake \
		--parallel \
		--dbg-package=libasl0-dbg

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DBUILD_SHARED_LIBS=ON \
		-DWITH_EXAMPLES=OFF \
		-DWITH_MATIO=OFF \
		-DWITH_API_DOC=OFF
